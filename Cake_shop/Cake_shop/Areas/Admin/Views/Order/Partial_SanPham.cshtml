@model IEnumerable<Cake_shop.Models.EF.OrdersDetails>


@if (Model != null && Model.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Tên sản phẩm</th>
                <th>Giá</th>
                <th>Số lượng</th>
                <th>Thành tiền</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td></td>
                    <td>@item.Product.title</td>
                    <td>@Cake_shop.Models.Common.FormatNumber.FormatNnumber(item.price , 0)</td>
                    <td>@item.quantity</td>
                    <td>@Cake_shop.Models.Common.FormatNumber.FormatNnumber((item.price * item.quantity), 0)</td>
                </tr>
            }
        </tbody>
    </table>
}
